---
import Layout from '../layouts/Layout.astro'; // ✅ Import Layout
---

<Layout 
  title="SEOdit.com - Premium Domain for Sale"
  description="SEOdit.com is a premium domain perfect for digital identity, AI ethics, and cybersecurity businesses."
  canonicalUrl="https://SEOdit.com/"
>

  <main style="display: flex; flex-direction: column; align-items: center; text-align: center;">
    <header>
      <h1>SEOdit.com is For Sale!</h1>
      <p>Perfect for businesses in digital identity verification, AI ethics, and cybersecurity.</p>
      <a href="#inquiry-form" style="
        background-color: #0457af; /* ✅ Blue color */
        color: rgb(255, 255, 255);
        padding: 15px 30px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1.2rem;
        display: inline-block;
        margin-top: 15px;
      ">Inquire Now</a>
    </header>

    <section>
      <h2>Why Choose SEOdit.com?</h2>
      <ul style="list-style: none; padding: 0;">
        <li>Memorable & authoritative domain</li>
        <li>Perfect for AI regulation, cybersecurity, and digital trust</li>
        <li>Future-proof for the evolving identity verification landscape</li>
      </ul>
      <h2>One of a kind domain name. When it's gone, it's gone.</h2>
    </section>

    <div style="text-align: center; margin: 20px 0;">
      <a href="/blog" style="
        background-color: #ce8602;
        color: rgb(255, 255, 255);
        padding: 15px 30px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1.2rem;
        display: inline-block;
      ">Visit Our Blog</a>
    </div>

    <section id="offer-form" class="offer-section">
      <h2>Interested?</h2>
      <h2>Make a Secure Offer via Escrow.com</h2>
      <div class="escrow-button-container" style="margin-bottom: 0px !important; display: flex !important; justify-content: center !important;">
        <form action="https://www.escrow.com/offer" method="post" target="_blank">
          <input type="hidden" name="type" value="domain_name">
          <input type="hidden" name="non_initiator_email" value="e.nectar971@dralias.com">
          <input type="hidden" name="non_initiator_id" value="3498727">
          <input type="hidden" name="non_initiator_role" value="seller">
          <input type="hidden" name="title" value="Offer for SEOdit.com">
          <input type="hidden" name="currency" value="USD">
          <input type="hidden" name="domain" value="SEOdit.com">
          <input type="hidden" name="price" value="0">
          <input type="hidden" name="concierge" value="true">
          <input type="hidden" name="with_content" value="false">
          <input type="hidden" name="inspection_period" value="1">
          <input type="hidden" name="fee_payer" value="seller">
          <input type="hidden" name="return_url" value="https://SEOdit.com">
          <input type="hidden" name="button_types" value="make_offer">
          <input type="hidden" name="auto_accept" value="50000">
          <input type="hidden" name="auto_reject" value="1000">
          <input type="hidden" name="item_key" value="SEOdit.com-01">
          <style>@import url(https://fonts.googleapis.com/css?family=Open+Sans:600);.EscrowButtonPrimary.EscrowButtonPrimary{background-image:url(data:image/png;base64,);-moz-osx-font-smoothing:grayscale!important;-webkit-font-smoothing:antialiased!important;background-color:#0ecb6f!important;background-repeat:no-repeat!important;background-position:right 13px!important;border-radius:4px!important;border:1px solid #0ecb6f!important;-webkit-box-shadow:0 2px 4px 0 hsla(0,12%,54%,.1)!important;box-shadow:0 2px 4px 0 hsla(0,12%,54%,.1)!important;-webkit-box-sizing:border-box!important;box-sizing:border-box!important;color:#fff!important;cursor:pointer!important;display:inline-block!important;font-family:Open Sans,sans-serif!important;font-size:14px!important;font-weight:600!important;letter-spacing:.4px!important;line-height:1.2!important;min-height:40px!important;padding:8px 118px 8px 21px!important;text-align:left!important;text-decoration:none!important;text-shadow:none!important;text-transform:none!important;-webkit-transition:all .1s linear!important;transition:all .1s linear!important;vertical-align:middle!important}.EscrowButtonPrimary.EscrowButtonPrimary:focus,.EscrowButtonPrimary.EscrowButtonPrimary:hover{color:#fff!important;font-size:14px!important;font-weight:600!important;outline:0!important;text-decoration:none!important;-webkit-transform:none!important;transform:none!important}.EscrowButtonPrimary.EscrowButtonPrimary:hover{background-color:#56da9a!important;border-color:#56da9a!important}.EscrowButtonPrimary.EscrowButtonPrimary:focus{background-color:#00b65a!important}
          </style>
          <button class="EscrowButtonPrimary" type="submit" style="margin-bottom: 5px !important; display: block !important; margin-left: auto !important; margin-right: auto !important;">
            Make A Secure Offer
          </button>                    
          <img src="https://t.escrow.com/1px.gif?name=bin&price=0&title=Offer%20for%20SEOdit.com&user_id=3498727" style="display: none;">
        </form>
      </div>
    </section>

    <section id="inquiry-form" class="inquire-section">
      <h2>Or, Make An Inquiry</h2>
      <form action="https://formspree.io/f/mjkgegyr" method="POST" style="display: flex; flex-direction: column; align-items: center; width: 100%; max-width: 400px; margin: auto;">
        <input type="text" name="name" placeholder="Your Name" required style="width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;" />
        <input type="email" name="email" placeholder="Your Email" required style="width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;" />
        <textarea name="message" placeholder="Your Message" rows="4" required style="width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ccc; border-radius: 4px; margin-bottom: 10px;"></textarea>
        <button type="submit" style="width: 100%; background-color: #0457af; color: white; padding: 15px; font-size: 1.2rem; border: none; border-radius: 4px; cursor: pointer;">Submit Inquiry</button>
      </form>
    </section>

    <footer>
      <p>&copy; 2025 SEOdit.com | Secure transactions via Escrow.com</p>
    </footer>
  </main>

</Layout>
